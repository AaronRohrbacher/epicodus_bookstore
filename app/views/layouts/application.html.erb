<!DOCTYPE html>
<html>
  <head>
    <title>EpicodusBookstore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/nav' %>
    <%= flash[:alert] %>
    <%= flash[:notice] %>

    <div class="container">
      <%= yield %>
    </div>

    <%= render 'shared/footer' %>

  </body>
</html>
