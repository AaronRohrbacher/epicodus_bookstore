<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :contributor %>
  <%= f.text_field :contributor %>
  <%= f.label :publisher %>
  <%= f.text_field :publisher %>
  <%= f.label :pages %>
  <%= f.text_field :pages %>
  <%= f.label :amazon_product_url %>
  <%= f.text_field :amazon_product_url %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit "Submit" %>
<% end %>
